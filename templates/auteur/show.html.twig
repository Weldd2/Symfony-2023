{% extends 'base.html.twig' %}

{% block title %}Auteur{% endblock %}

{% block body %}
<div class="container">
    <h1>Auteur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ auteur.id }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ auteur.prenom }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ auteur.nom }}</td>
            </tr>
			<tr>
                <th>Livres</th>
                <td>
					{% for livre in auteur.livres %}
						{{livre.titre}}
						{% if livre != loop.last %}
							|
						{% endif %}
					{% endfor %}
				</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary mb-4" href="{{ path('app_auteur_index') }}">Retour Ã  la liste</a>
	{% if is_granted('ROLE_ADMIN') %}
		<a class="btn btn-primary mb-4" href="{{ path('app_auteur_edit', {'id': auteur.id}) }}">Modifier</a>
		{{ include('auteur/_delete_form.html.twig') }}
	{% endif %}
</div>
{% endblock %}
