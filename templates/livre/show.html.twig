{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
<div class="container">
    <h1>Livre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ livre.titre }}</td>
            </tr>
			<tr>
                <th>Auteurs</th>
                <td>
					{% for auteur in livre.auteurs %}
						{% set age = date().diff(date(auteur.dateNaissance)).y %}
						{{auteur.nom}} {{auteur.prenom}} {{age}} ans
						{% if auteur != loop.last %}
							|
						{% endif %}
					{% endfor %}
				</td>
            </tr>
            <tr>
                <th>Quatrieme</th>
                <td>{{ livre.quatrieme }}</td>
            </tr>
			<tr>
                <th>Disponibilité</th>
                <td>
					{% if livre.estEmpruntable() %}
						Empruntable
					{% else %}
						De retour le {{livre.getEmpruntActuel().getDateRetour()|date('d/m/Y')}}
					{% endif %}
				</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary mb-4" href="{{ path('app_livre_index') }}">Retour à la liste</a>
	{% if is_granted('ROLE_ADMIN') %}
		<a class="btn btn-warning mb-4" href="{{ path('app_livre_edit', {'id': livre.id}) }}">Modifier</a>

		{{ include('livre/_delete_form.html.twig') }}
	{% endif %}
</div>
{% endblock %}
